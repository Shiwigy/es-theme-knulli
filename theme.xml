<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="detailed_2">

<formatVersion>7</formatVersion>

	<include>./_inc/variables/lang-default.xml</include>

    <variables>
		

		<v.themeVersion>2.5.37</v.themeVersion>

		<v.allViews>system,basic,detailed,detailed_2,grid</v.allViews>
		<v.allGamelists>basic,detailed,detailed_2,grid</v.allGamelists>
		<v.videoGamelists>detailed,detailed_2,grid</v.videoGamelists>
		<v.detailedGamelists>detailed,detailed_2</v.detailedGamelists>
		<v.textGamelists>basic,detailed,detailed_2</v.textGamelists>
		<v.systemView>system</v.systemView>

		<v.line.hc>1 / ${screen.height}</v.line.hc>
		<v.line.h>2 / ${screen.height}</v.line.h>
		<v.line.w>2 / ${screen.width}</v.line.w>
		<v.line4.w>4 / ${screen.width}</v.line4.w>

		<v.lineScroll>1 / ${screen.width}</v.lineScroll>

		<v.frame.x>0.5</v.frame.x>
		<v.frameLeft.x>0.22</v.frameLeft.x>
		<v.frameRight.x>0.705</v.frameRight.x>

		<v.frame.y ifHelpPrompts="true">0.50</v.frame.y>
		<v.frame.y ifHelpPrompts="false">0.53</v.frame.y>

		<v.frame.w>0.95</v.frame.w>
		<v.frameLeft.w>0.39</v.frameLeft.w>
		<v.frameRight.w>0.54</v.frameRight.w>

		<v.frame.h ifHelpPrompts="true">0.85</v.frame.h>
		<v.frame.h ifHelpPrompts="false">0.90</v.frame.h>

		<v.frameBorders.w>0.95 + (${v.line.w})</v.frameBorders.w>
		<v.frameLeftBorders.w>0.39 + (${v.line.w})</v.frameLeftBorders.w>
		<v.frameRightBorders.w>0.54 + (${v.line.w})</v.frameRightBorders.w>

		<v.frameBorders.h ifHelpPrompts="true">0.85 + (${v.line.h})</v.frameBorders.h>
		<v.frameBorders.h ifHelpPrompts="false">0.90 + (${v.line.h})</v.frameBorders.h>

		<v.frame.size>${v.frame.w} ${v.frame.h}</v.frame.size>
		<v.frameLeft.size>${v.frameLeft.w} ${v.frame.h}</v.frameLeft.size>
		<v.frameRight.size>${v.frameRight.w} ${v.frame.h}</v.frameRight.size>

		<v.frame.pos>${v.frame.x} ${v.frame.y}</v.frame.pos>
		<v.frameLeft.pos>${v.frameLeft.x} ${v.frame.y}</v.frameLeft.pos>
		<v.frameRight.pos>${v.frameRight.x} ${v.frame.y}</v.frameRight.pos>

		<v.frameBorders.size>${v.frameBorders.w} ${v.frameBorders.h}</v.frameBorders.size>
		<v.frameLeftBorders.size>${v.frameLeftBorders.w} ${v.frameBorders.h}</v.frameLeftBorders.size>
		<v.frameRightBorders.size>${v.frameRightBorders.w} ${v.frameBorders.h}</v.frameRightBorders.size>

		<v.gamelist.fontSize>0.024</v.gamelist.fontSize>
		<v.gamelistDetailed.size ifHelpPrompts="true">0.39 0.85</v.gamelistDetailed.size>
		<v.gamelistDetailed.size ifHelpPrompts="false">0.39 0.90</v.gamelistDetailed.size>
		<v.gamelistBasic.size ifHelpPrompts="true">0.95 0.85</v.gamelistBasic.size>
		<v.gamelistBasic.size ifHelpPrompts="false">0.95 0.90</v.gamelistBasic.size>

		<v.gameDescription.size ifHelpPrompts="true">0.113</v.gameDescription.size>
		<v.gameDescription.size ifHelpPrompts="false">0.160</v.gameDescription.size>

		<v.playTime.size ifHelpPrompts="true">0.053</v.playTime.size>
		<v.playTime.size ifHelpPrompts="false">0.100</v.playTime.size>

		<v.video.pos ifHelpPrompts="true">0.705 0.65</v.video.pos>
		<v.video.pos ifHelpPrompts="false">0.705 0.70</v.video.pos>

		<v.marqueeMax.size ifHelpPrompts="true">0.50 0.08</v.marqueeMax.size>
		<v.marqueeMax.size ifHelpPrompts="false">0.50 0.12</v.marqueeMax.size>

		<c.text>ffffff</c.text>
		<c.selected>000000</c.selected>
		<c.glowColor>0000004d</c.glowColor>

		<v.lines ifHelpPrompts="true">11</v.lines>
		<v.lines ifHelpPrompts="false">12</v.lines>

		<p.gamecounttext ifHelpPrompts="true">0 0.85</p.gamecounttext>
		<p.gamecounttext ifHelpPrompts="false">0 0.90</p.gamecounttext>

		<v.gridAutoLayout if="${screen.width} &lt;= '641'">3 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '641' &amp;&amp; ${screen.width} &lt;= '721'">3 3</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '721' &amp;&amp; ${screen.width} &lt;= '1281'">4 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '1281'">5 3</v.gridAutoLayout>
		
		<f.def>ubuntu.ttf</f.def>

    </variables>

	<view name="basic,detailed"></view>
	<customView name="detailed_2"></customView>
	<view name="grid"></view>

	<subset name="slideType"
	
		displayName="${subset.slideType}"
		
	>

		<include name="horizontal" displayName="${subset.slideType.horizontal}" />
		<include name="vertical" displayName="${subset.slideType.vertical}" />	
	
	</subset>

	<subset name="themeColors"
	
		displayName="${subset.themeColors}"
		
	>

		<include name="knulli" displayName="${subset.themeColors.knulli}" >./_inc/variables/themeColors-knulli.xml</include>	
		<include name="batocera" displayName="${subset.themeColors.batocera}" >./_inc/variables/themeColors-batocera.xml</include>
		<include name="anbernic" displayName="${subset.themeColors.anbernic}" >./_inc/variables/themeColors-anbernic.xml</include>
	
	</subset>

	<subset name="splashscreen"
	
		displayName="${subset.splashscreen}"
		
	>
	
		<include name="colorset" displayName="${subset.splashscreen.colorset}" />
		<include name="default" displayName="${subset.splashscreen.default}" />
		<include name="knulli" displayName="${subset.splashscreen.knulli}" />
		<include name="knulli_firefly" displayName="${subset.splashscreen.knulli_firefly}" />
		<include name="batocera" displayName="${subset.splashscreen.batocera}" />
		<include name="anbernic" displayName="${subset.splashscreen.anbernic}" />
		<include name="disabled" displayName="${subset.splashscreen.disabled}" />
	
	</subset>

	<subset name="systemlogoeffects"
	
		displayName="${subset.systemlogoeffects}"
		appliesTo="${v.systemView}"
		
	>

		<include name="enabled" displayName="${subset.systemlogoeffects.enabled}" />
		<include name="disabled" displayName="${subset.systemlogoeffects.disabled}" />	
	
	</subset>

	<subset name="gamecount"
	
		displayName="${subset.gamecount}"
		appliesTo="${v.systemView}"
		
	>

		<include name="no" displayName="${subset.gamecount.no}" />
		<include name="yes" displayName="${subset.gamecount.yes}" />	
	
	</subset>

	<subset name="disableVideos"
	
		displayName="${subset.disableVideos}"
		appliesTo="${v.videoGamelists}"
		
	>

		<include name="no" displayName="${subset.disableVideos.no}" />	
		<include name="yes" displayName="${subset.disableVideos.yes}" />
	
	</subset>

	<subset name="playTimeEnabled"
	
		displayName="${subset.playTimeEnabled}"
		appliesTo="detailed"
		
	>

		<include name="yes" displayName="${subset.playTimeEnabled.yes}" />	
		<include name="no" displayName="${subset.playTimeEnabled.no}" />
	
	</subset>

	<subset name="systemlogosongamelists"
	
		displayName="${subset.systemlogosongamelists}"
		appliesTo="${v.allGamelists}"
		
	>

		<include name="yes" displayName="${subset.systemlogosongamelists.yes}" />
		<include name="no" displayName="${subset.systemlogosongamelists.no}" />	
	
	</subset>

	<subset name="systemRegion"
	
		displayName="${subset.systemRegion}"
		
	>
	
		<include name="eu" displayName="${subset.systemRegion.eu}" />
		<include name="us" displayName="${subset.systemRegion.us}" />
		<include name="jp" displayName="${subset.systemRegion.jp}" />
	
	</subset>

	<subset name="batterybar"
	
		displayName="${subset.batterybar}"
		
	>

		<include name="yes" displayName="${subset.batterybar.yes}" />	
		<include name="no" displayName="${subset.batterybar.no}" />
	
	</subset>

	<subset name="version"
	
		displayName="${subset.themeVersionString}"
		
	>
	
		<include name="${v.themeVersion}" />
	
	</subset>

	<view name="screen">
	
		<controllerActivity name="controllerActivity"
		
			pos="${v.controllerActivity.x} 0.009"
			size="0.185 0.023"
			color="00000000"
			activityColor="00000000"
			hotkeyColor="00000000"
			gunPath="./../parts/controllerActivity/gun.svg"
			wheelPath="./../parts/controllerActivity/wheel.svg"
			imagePath="./../parts/controllerActivity/gamepad.svg"
			itemSpacing="${v.controllerActivity.itemSpacing}"
			
		/>

	</view>

	<view name="system,menu,basic,detailed,grid">

		<helpsystem name="help"
		
			textColor="${c.text}"
			origin="0 0.5"
			pos="0.0104 0.975"
			iconColor="${c.textHeader}"
			glowColor="${c.glowColor}"
			glowOffset="2"
			glowSize="1"
			fontSize="0.034"

		/>
	
		<image name="hide"
		
			extra="true"
			zIndex="100"
			path="./_inc/parts/white.png"
			size="1 1"
			color="${c.base}"
		
		/>
		
		<image name="colorMask"
		
			extra="true"
			linearSmooth="true"
			zIndex="500"
			path="./_inc/parts/white.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			minSize="1 1"
			color="${c.base}"
			colorEnd="${c.main}00"
			gradientType="vertical"
			opacity="0.5"
			
		/>

		<image name="colorTop,colorBottom"
		
			extra="true"
			zIndex="200"
			path="./_inc/parts/white.png"
			size="1 0.5"
			origin="1 0"
			x="1"
			opacity="0.15"
			gradientType="vertical"
		
		/>

		<image name="colorTop"
		
			extra="true"
			y="0"
			color="${c.main}00"
			colorEnd="${c.main}80"
		
		/>

		<image name="colorBottom"
		
			extra="true"
			y="0.5"
			color="${c.main}80"
			colorEnd="${c.main}00"
		
		/>
	
		<image name="barUp"
		
			zIndex="2000"
			path="./_inc/parts/white.png"
			size="1.2 0.04"
			color="${c.menubg}"
			h="0.05"
			extra="true"
			origin="0.5 0"
			pos="0.5 0"
		
		/>
		
		<image name="barDown"
			ifHelpPrompts="true"
			zIndex="2000"
			path="./_inc/parts/white.png"
			size="1.2 0.04"
			color="${c.menubg}"
			h="0.05"
			extra="true"
			origin="0.5 1"
			pos="0.5 1"
		
		/>
	
	</view>

	<include>./_inc/xml/menu.xml</include>
	<include>./_inc/xml/batteryIndicator.xml</include>
	<include>./_inc/xml/logo.xml</include>
	<include>./_inc/xml/system.xml</include>
	<include>./_inc/xml/grid.xml</include>
	<include>./_inc/xml/basic.xml</include>
	<include>./_inc/xml/detailed.xml</include>>
	<include>./_inc/xml/detailed_2.xml</include>
	
</theme>
