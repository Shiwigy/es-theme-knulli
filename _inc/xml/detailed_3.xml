<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<customView name="detailed_3" inherits="detailed" displayName="${lang.detailed_3}">

		<image ifSubset="systemlogosongamelists:no" name="logo"
		
			visible="false"

		/>

		<video ifSubset="videoPreviews:enabled" name="game-video"
		
			extra="true"
			path="{game:video}"
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			
		>

			<delay ifSubset="videoLatency:2">2</delay>
			<delay ifSubset="videoLatency:5">5</delay>
			<delay ifSubset="videoLatency:8">8</delay>
			<delay ifSubset="videoLatency:15">15</delay>

		</video>

		<image name="game-artwork"

			extra="true"
			path="{game:thumbnail}"
			zIndex="999"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"

		/>

		<video name="md_video"
		
			visible="false"
			
		/>

		<image name="md_boxart"

			visible="false"

		/>


		<text name="md_description,noDescription"
		
			visible="false"

		/>
		
	</customView>

</theme>
