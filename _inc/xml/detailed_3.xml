<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<customView name="detailed_3" inherits="detailed" displayName="${lang.detailed_3}">

		<image ifSubset="systemlogosongamelists:no" name="logo"
		
			visible="false"

		/>

		<video ifSubset="videoPreviews:enabled" name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			
		/>

		<image name="md_boxart"

			zIndex="999"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"

		/>

		<text name="md_description,noDescription"
		
			visible="false"

		/>
		
	</customView>

</theme>
