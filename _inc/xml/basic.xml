<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="basic">

		<image name="logo"
		
			zIndex="601"
			linearSmooth="false"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			saturation="0.55"
			color="${c.textHeader}15"
			colorEnd="80808080"

		>

			<visible ifSubset="systemlogosongamelists:no">false</visible>

		</image>

		<text name="logoText"

			zIndex="601"
			linearSmooth="false"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			saturation="0.75"
			fontSize="0.15"
			fontPath="./../fonts/${f.def}"
			color="${c.textHeader}15"
			colorEnd="80808080"

		>

			<visible ifSubset="systemlogosongamelists:no">false</visible>

		</text>

		<image name="frame"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frame.size}"
			pos="${v.frame.pos}"
			color="${c.frame}80"
			
		/>

		<image name="frameBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameBorders.size}"
			pos="${v.frame.pos}"
			color="${c.main}33"
			
		/>
			
		<image name="frameShadow"
		
			extra="true"
			linearSmooth="true"
			zIndex="598"
			path="./../parts/frameShadow.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1 1"
			color="${c.glowColor}"
			opacity="0.5"
			
		/>
			
		<textlist name="gamelist"
		
			zIndex="1000"
			size="${v.gamelistBasic.size}"
			pos="0.025 0.075"
			selectedColor="${c.selected}"
			primaryColor="${c.text}"
			secondaryColor="${c.text}"
			extraTextColor="${c.textHeader}"
			extraTextSelectedColor="${c.selected}"
			selectorColor="${c.menuSelector}"	  		
			selectorColorEnd="${ce.menuSelector}"	  		
			selectorImagePath="./../parts/selectorBasic.png"	  		
			fontPath="./../fonts/${f.def}"
			fontSize="0.036"
                        horizontalMargin="0.01"
			scrollSound="./../parts/scroll.wav"
			lines="${l.lines}"
			scrollbarColor="${c.textHeader}"
			scrollbarSize="${v.ScrollBar}"
			scrollbarAlignment="innerright"
			
		/>

	</view>

</theme>
