<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="system">

		<carousel name="systemcarousel"
		
			zIndex="1000"
			color="00000000"
			scrollSound="./../parts/scroll.wav"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1.1 0.8"
			logoSize="0.33 0.18"
			
		>
			
			<maxLogoCount if="${s.notWide}">2</maxLogoCount>
			<maxLogoCount if="${s.ultraWide}">4</maxLogoCount>
		
			<logoSize if="${s.notWide}">0.60 0.36</logoSize>
			<logoSize if="${s.ultraWide}">0.25 0.18</logoSize>
		
		</carousel>

		<screenshader name="blurCarousel"
		
			ifSubset="shaders:on"
			extra="true"
			zIndex="900"
			pos="0 0.35"
			size="1 1"
	
		>
		
			<path>./../shaders/scanlines.glsl</path>

		</screenshader>

		<image name="glare"
		
			extra="true"
			linearSmooth="true"
			zIndex="899"
			path="./../parts/glare.png"
			maxSize="1 1"
			origin="0 0"
			pos="0 0"
			color="${c.main}"
			opacity="0.075"

		/>

		
	</view>

</theme>
