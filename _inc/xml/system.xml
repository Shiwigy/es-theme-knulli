<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="system">

		<carousel name="systemcarousel"
			
			type="vertical_wheel"
			zIndex="1000"
			color="00000000"
			defaultTransition="fade &amp; slide"
			scrollSound="./../parts/scroll.wav"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1.1 1"
			logoSize="0.60 0.36"
			
		/>

		<carousel ifSubset="systemlogoeffects:enabled" name="systemcarousel"
			maxLogoCount="2"
		/>

		<carousel ifSubset="systemlogoeffects:disabled" name="systemcarousel"
			maxLogoCount="1"
		/>

		<text name="systemInfo"
			
			zIndex="1000"
			pos="${p.gamecounttext}"
			backgroundColor="00000000"
			color="${c.text}"
			fontPath="./../fonts/${f.def}"
            		fontSize="0.04"
		>
			<visible ifSubset="gamecount:no">false</visible>
			<storyboard>		
				<animation property="opacity" from="0" to="1" duration="200" mode="easeIn" />		
			</storyboard>
			
		</text>
		
	</view>

</theme>
