<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>

	<include>./_inc/variables/lang-default.xml</include>
	<include>./_inc/variables/lang-${lang}.xml</include>
	
	<view name="system">

		<text name="logoText"></text>

		<carousel name="systemcarousel"
			
			zIndex="1000"
			color="00000000"
			scrollSound="./../parts/scroll.wav"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1 1"
			logoSize="0.90 0.70"
			maxLogoCount="1"
			logoScale="1"
			
		/>

		<carousel ifSubset="slideType:vertical" name="systemcarousel"
			type="vertical"
		/>

		<text name="systemInfo"
			
			zIndex="1000"
			backgroundColor="00000000"
			color="${c.text}"
			pos="${v.gamecounttext}"
			fontPath="./../fonts/${f.def}"
            		fontSize="0.04"
		>
			<visible ifSubset="gamecount:no">false</visible>
			<storyboard>		
				<animation property="opacity" from="0" to="1" duration="200" mode="easeIn" />		
			</storyboard>
			
		</text>
		
	</view>

</theme>
