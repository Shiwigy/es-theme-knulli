<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<customView name="detailed_2" inherits="detailed" displayName="${lang.detailed_2}">

		<image ifSubset="systemlogos:no" name="logo"
		
			visible="false"

		/>

		<video ifSubset="disableVideos:no" name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			pos="${v.video2.pos}"
			showSnapshotNoVideo="true"	
			showSnapshotDelay="true"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 0.75"
			maxSize="0.5 0.6"
			
		/>

		<image ifSubset="disableVideos:yes" name="md_boxart"

			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			pos="${v.boxart.pos}"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.75"
			maxSize="0.5 0.75"

		/>

		<image name="md_marquee"

			visible="false"

		/>


		<text name="md_gametime"

			visible="false"

		/>

		<text name="md_description,noDescription"
		
			visible="false"
		/>
		
	</customView>

</theme>
