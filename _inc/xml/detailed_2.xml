<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<customView name="detailed_2" inherits="detailed" displayName="${lang.detailed_2}">

		<image ifSubset="systemlogosongamelists:no" name="logo"
		
			visible="false"

		/>

		<video ifSubset="disableVideos:no" name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			showSnapshotNoVideo="true"	
			showSnapshotDelay="true"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			
		/>

		<image ifSubset="disableVideos:yes" name="md_boxart"

			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"

		/>

		<image name="md_marquee"

			visible="false"

		/>


		<text name="md_gametime"

			origin="1 0.5"
                        pos="0.975 0.05"

		/>

		<text name="md_description,noDescription"
		
			visible="false"
		/>
		
	</customView>

</theme>
