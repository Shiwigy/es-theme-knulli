<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="detailed">

		<image name="logo"
		
			origin="0 0.5"
			x="0.025"
		
		/>

		<image name="frameLeft"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameLeft.size}"
			pos="${v.frameLeft.pos}"
			color="${c.frame}80"
			
		/>

		<image name="frameLeftBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameLeftBorders.size}"
			pos="${v.frameLeft.pos}"
			color="${c.main}33"
			
		/>

		<image name="frameRight"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			color="${c.frame}80"
			
		/>

		<image name="md_thumbnail"
		
			zIndex="601"
			linearSmooth="true"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			color="${c.textHeader}15"
			colorEnd="80808080"
			gradientType="horizontal"
			visible="true"
			
		/>

		<image name="frameRightBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameRightBorders.size}"
			pos="${v.frameRight.pos}"
			color="${c.main}33"
			
		/>
			
		<image name="frameLeftRightShadow"
		
			extra="true"
			linearSmooth="true"
			zIndex="598"
			path="./../parts/frameLeftRightShadow.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1 1"
			color="${c.glowColor}"
			opacity="0.5"
			
		/>
		
		<textlist name="gamelist"
		
			zIndex="1000"

			origin="0.5 0.5"
			size="0.39 0.72"
			pos="0.22 0.565"
			selectedColor="${c.selected}"
			primaryColor="${c.text}"
			secondaryColor="${c.text}"
			extraTextColor="${c.text}"
			extraTextSelectedColor="${c.selected}"
			selectorColor="${c.menuSelector}"	  		
			selectorColorEnd="${ce.menuSelector}"	  		
			selectorImagePath="./../parts/selector.png"	  		
			fontPath="./../fonts/${f.mb}"
			alignment="left"
                        horizontalMargin="0.01"
			forceUppercase="false"
			scrollSound="./../parts/scroll.wav"
			fontSize="0.032"
			lines="11"
			
		/>


		<video name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			pos="0.705 0.62"
			showSnapshotNoVideo="true"	
			showSnapshotDelay="true"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 1"
			maxSize="0.45 0.4"
			
		/>

		<image name="md_marquee"
			zIndex="1001"
			linearSmooth="true"
			saturation="1.1"
			pos="0.45 0.73"
			maxSize="0.28 0.10"
			origin="0 1"
			alignment="left"
		/>


		<text name="
    		        md_gametime
     		       "

			zIndex="1001"
			forceUppercase="false"
			alignment="right"
			verticalAlignment="top"
			fontPath="./../fonts/${f.mb}"
                        pos="0.95 0.65"
                        size="0.3322916666666667 0.2851851851851852"
                        glowColor="${c.glowColor}"
			glowOffset="2"
			glowSize="1"
			origin="1 0.5"
			fontSize="0.028"
			w="0.5"
			h="0.18"
			offsetY="0.113"
			color="${c.text}ef"
			backgroundColor="${c.textHeader}05"
			lineSpacing="1.58"

		/>

		<text name="
     		        md_description
     		       "
		
			zIndex="1001"
			forceUppercase="false"
			alignment="left"
			verticalAlignment="top"
			fontPath="./../fonts/${f.mri}"
                        pos="0.4526041666666667 0.6148148148148148"
                        size="0.3322916666666667 0.2851851851851852"
                        fontSize="0.024"
			color="${c.selected}"
                        glowColor="${c.glowColor}"
			glowOffset="2"
			glowSize="1"

		/>
			
		<text name="
    		        noDescription
    		       "
		
			zIndex="1001"
			extra="true"
			forceUppercase="false"
			alignment="left"
			verticalAlignment="top"
			fontPath="./../fonts/${f.mri}"
                        pos="0.4526041666666667 0.6148148148148148"
                        size="0.3322916666666667 0.2851851851851852"
                        fontSize="0.024"
			color="${c.selected}"
                        glowColor="${c.glowColor}"
			glowOffset="2"
			glowSize="1"
			text="${lang.noDesc}"
			visible="empty({game:desc})"

		/>

		<text name="md_description,noDescription"
		
			extra="true"
			fontSize="0.028"
			w="0.5"
			h="0.18"
			offsetY="0.113"
			forceUppercase="false"
			fontPath="./../fonts/${f.mb}"
			color="${c.text}ef"
			backgroundColor="${c.textHeader}05"
			y="0.62"
			lineSpacing="1.58"
			
		/>
			
		<image name="md_kidgame,md_notkidgame"
		
			zIndex="900"
			linearSmooth="true"
			origin="0.5 0"
			pos="0.8799479166666667 0.333"
			path="./../parts/kid.svg"
			maxSize="0.12 0.28"
			color="${c.text}4d"
			opacity="1"
			visible="true"
			
		/>
			
		<image name="md_notkidgame"
		
			color="00000000"
			
		/>
		
		<image name="md_hidden"
		
			zIndex="1002"
			linearSmooth="true"
			origin="0.5 0"
			pos="0.964 0.899"
			path="./../parts/hidden.svg"
			maxSize="0.02 0.02"
			color="${c.yellow}"
			opacity="0.9"
			visible="true"
					
		>
		
			<storyboard
			
				repeat="forever"
				
			>
			
                <animation		property="opacity"			from="0.1"			to="0.9"				duration="250"			mode="easeInOut"		autoreverse="true"		/>
				
			</storyboard>		

		</image>
		
	</view>

</theme>
