<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="detailed">

		<image name="logo"
		
			zIndex="601"
			linearSmooth="false"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			saturation="0.75"
			color="${c.textHeader}15"
			colorEnd="80808080"

		>

			<visible ifSubset="systemlogosongamelists:no">false</visible>

		</image>

		<text name="logoText"

			zIndex="601"
			linearSmooth="false"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			saturation="0.75"
			fontSize="0.15"
			fontPath="./../fonts/${f.defbold}"
			color="${c.textHeader}15"
			colorEnd="80808080"
			forceUppercase="true"

		>

			<visible ifSubset="systemlogosongamelists:no">false</visible>

		</text>

		<image name="frameLeft"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameLeft.size}"
			pos="${v.frameLeft.pos}"
			color="${c.frame}80"
			
		/>

		<image name="frameLeftBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameLeftBorders.size}"
			pos="${v.frameLeft.pos}"
			color="${c.main}33"
			
		/>

		<image name="frameRight"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			color="${c.frame}80"
			
		/>

		<image name="frameRightBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameRightBorders.size}"
			pos="${v.frameRight.pos}"
			color="${c.main}33"
			
		/>
			
		<image name="frameLeftRightShadow"
		
			extra="true"
			linearSmooth="true"
			zIndex="598"
			path="./../parts/frameLeftRightShadow.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1 1"
			color="${c.glowColor}"
			opacity="0.5"
			
		/>
		
		<textlist name="gamelist"
		
			zIndex="1000"
			size="${v.gamelistDetailed.size}"
			pos="0.025 0.075"
			selectedColor="${c.selected}"
			primaryColor="${c.text}"
			secondaryColor="${c.text}"
			extraTextColor="${c.textHeader}"
			extraTextSelectedColor="${c.selected}"
			selectorColor="${c.menuSelector}"	  		
			selectorColorEnd="${ce.menuSelector}"	  		
			selectorImagePath="./../parts/selector.png"	  		
			fontPath="./../fonts/${f.def}"
			alignment="left"
                        horizontalMargin="0.01"
			scrollSound="./../parts/scroll.wav"
			fontSize="0.036"
			lines ="${l.lines}"
			scrollbarColor="${c.textHeader}"
			scrollbarSize="${v.ScrollBar}"
			scrollbarAlignment="innerright"
			
		/>


		<video ifSubset="videoPreviews:enabled" name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			showSnapshotNoVideo="true"	
			showSnapshotDelay="true"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 0.33"
			maxSize="0.50 0.50"
			pos="${v.video.pos}"
			visible="!empty({game:desc})"
			
		/>

		<image ifSubset="videoPreviews:disabled" name="md_boxart"

			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 1"
			maxSize="0.55 0.50"
			pos="${v.boxart.pos}"
			visible="!empty({game:desc})"

		/>

		<video ifSubset="videoPreviews:enabled" name="md_video"
		
			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			showSnapshotNoVideo="true"	
			showSnapshotDelay="true"
			effect="none"
			delay="1"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			visible="empty({game:desc})"
			
		/>

		<image ifSubset="videoPreviews:disabled" name="md_boxart"

			zIndex="1000"
			linearSmooth="true"
			saturation="0.75"
			color="efefef"
			effect="none"
			roundCorners="0.018"
			origin="0.5 0.5"
			maxSize="${v.frameRight.size}"
			pos="${v.frameRight.pos}"
			visible="empty({game:desc})"

		/>

		<text name="md_gametime"

			zIndex="1001"
			origin="0.5 0.5"
			pos="0.70 0.025"
			fontSize="0.035"
			fontPath="./../fonts/${f.def}"
			color="${c.text}ef"
			alignment="center"
			singleLineScroll="true"
			w="0.20"
			autoScroll="horizontal"
			autoScrollDelay="0.01"

		/>

		<text name="gameRating"
		
			extra="true"
			visible="{game:rating} ? 1 : 0"
			
		>
			<text>{game:stars}</text>

		</text>
		
		<text name="gameNorating"
		
			extra="true"
			visible="{game:rating} ? 0 : 1"
			
		>
			<text>${lang.noRating}</text>

		</text>

		
		<text name="gameRating,gameNorating"

			extra="true"
			zIndex="1001"
			origin="0.5 0.5"
			pos="0.50 0.025"
			fontSize="0.035"
			fontPath="./../fonts/${f.def}"
			color="${c.text}ef"
			alignment="center"
			singleLineScroll="true"
			w="0.20"
			autoScroll="horizontal"
			autoScrollDelay="0.01"
			
		/>
		
		<text name="gameLastplayed"

			text="elapsed({game:lastplayed})"
			visible="({game:playcount}) &gt; 0 ? 1 : 0"
			
		/>

		<text name="gameNoLastplayed"

			text="${lang.neverPlayed}"
			visible="({game:playcount}) == 0 ? 1 : 0"
			
		/>

		<text name="gameLastplayed,gameNoLastplayed"

			extra="true"
			zIndex="1001"
			origin="0.5 0.5"
			pos="0.30 0.025"
			fontSize="0.035"
			fontPath="./../fonts/${f.def}"
			color="${c.text}ef"
			alignment="center"
			singleLineScroll="true"
			w="0.20"
			autoScroll="horizontal"
			autoScrollDelay="0.01"
			
		/>

		<text name="md_description"
		
			extra="true"
			zIndex="1001"
			alignment="left"
			verticalAlignment="top"
                        pos="0.455 ${v.gameDescription.y}"
			fontSize="0.030"
			size="0.5 0.22"
			fontPath="./../fonts/${f.def}"
			color="${c.text}ef"
			backgroundColor="${c.textHeader}10"
			lineSpacing="1.58"
			roundCorners="0.018"
			visible="!empty({game:desc})"
			
		>

			<autoScrollDelay ifSubset="scrollSpeed:normal">1000</autoScrollDelay>
			<autoScrollDelay ifSubset="scrollSpeed:fast">800</autoScrollDelay>
			<autoScrollSpeed ifSubset="scrollSpeed:normal">50</autoScrollSpeed>
			<autoScrollSpeed ifSubset="scrollSpeed:fast">20</autoScrollSpeed>

                </text>
		
		<image name="md_hidden"
		
			zIndex="1002"
			linearSmooth="true"
			origin="0.5 0"
			pos="0.964 0.899"
			path="./../parts/hidden.svg"
			maxSize="0.02 0.02"
			opacity="0.9"
			visible="true"
					
		>
		
			<storyboard
				repeat="forever"
			>
				<animation property="opacity" from="0.1" to="0.9" duration="250" mode="easeInOut" autoreverse="true" />	
			</storyboard>		

		</image>
		
	</view>

</theme>
